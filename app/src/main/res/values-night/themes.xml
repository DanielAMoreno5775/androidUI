<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidUIExperiments" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/deep_sky_blue</item>
        <item name="colorPrimaryVariant">@color/dark_navy_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/khaki</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Colors for specific elements -->
        <item name="android:statusBarColor" tools:targetApi="21">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/black</item>
        <item name="android:colorBackground" tools:targetApi="19">@color/graphite_black</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationViewDark</item>
        <item name="colorAccentCustom1">@color/plump_purple</item>
        <item name="colorAccentCustom2">@color/golden_poppy</item>
        <item name="colorAccentCustom3">@color/soft_error_red</item>
    </style>

    <style name="Widget.App.BottomNavigationViewDark" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationViewDark</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationViewDark" parent="">
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:colorBackground" tools:targetApi="19">?attr/colorPrimary</item>
    </style>

    <!-- Base application theme. -->
    <style name="Base.Theme.AndroidUIExperiments" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>
</resources>