<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidUIExperiments" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#03A9F4</item>
        <item name="colorPrimaryVariant">@color/dark_navy_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/skobeloff</item>
        <item name="colorSecondaryVariant">@color/graphite_black</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Tertiary brand color. -->
        <item name="colorTertiary">@color/golden_poppy</item>
        <item name="colorOnTertiary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="21">?attr/colorPrimaryVariant</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationViewLight</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Widget.App.BottomNavigationViewLight" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationViewLight</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationViewLight" parent="">
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:colorBackground" tools:targetApi="19">#03A9F4</item>
    </style>

    <!-- Base application theme. -->
    <style name="Base.Theme.AndroidUIExperiments" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
</resources>